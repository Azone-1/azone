# AZone Bot Builder Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
PORT=5000
HOST=0.0.0.0

# Domain Configuration (for webhooks and public URLs)
# Set this to your domain name (e.g., paing.xyz or bot.paing.xyz)
DOMAIN=paing.xyz
USE_HTTPS=True

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Database Paths (optional, defaults shown)
BOT_DB_PATH=bots.db
SCHEDULED_POSTS_DB_PATH=web_scheduled_posts.db

# Facebook Messenger Configuration (optional)
FACEBOOK_VERIFY_TOKEN=azone_bot_verify_token

# Telegram Configuration (optional)
# Telegram bot token is configured via dashboard
